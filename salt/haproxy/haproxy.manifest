---
apiVersion: v1
kind: Pod
metadata:
  name: haproxy-k8-api
  namespace: kube-system
  labels:
    name: haproxy
spec:
  containers:
  - name: haproxy
    resources:
      requests:
        memory: 128Mi
      limits:
        memory: 128Mi
    image: haproxy:1.7.5
    volumeMounts:
    - mountPath: /usr/local/etc/haproxy
      name: haproxy-cfg
  volumes:
  - hostPath:
      path: /etc/haproxy
    name: haproxy-cfg
  restartPolicy: Always
  hostNetwork: true
