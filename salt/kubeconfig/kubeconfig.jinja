{% set api_server = "api." + pillar['internal_infra_domain'] -%}
{% set lb_ssl_port = salt['pillar.get']('api:lb_ssl_port', '6443') -%}
{% set api_server_url = 'https://' + api_server + ':' + lb_ssl_port -%}
---
apiVersion: v1
clusters:
- cluster:
    certificate-authority: {{ pillar['paths']['ca_dir'] }}/{{ pillar['paths']['ca_filename'] }}
    server: {{ api_server_url }}
  name: default-cluster
contexts:
- context:
    cluster: default-cluster
    user: default-admin
  name: default-system
current-context: default-system
kind: Config
preferences: {}
users:
- name: default-admin
  user:
    client-certificate: /etc/pki/minion.crt
    client-key: /etc/pki/minion.key
